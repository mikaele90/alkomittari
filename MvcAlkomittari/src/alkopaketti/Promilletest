
package alkopaketti;

import java.util.Scanner;


public class Promilletest {
    
    public static void main(String[] args) {
        //lisätään scanner
        Scanner user_input = new Scanner(System.in);
        //muuttujat
        Kayttaja kayttaja;
        double maara, paino, plussat, miinukset, newpaino, juoma, promillet = 0;
        
        //aika oikeasti tulee erillisestä oliosta???
        double aika = 1;
        int sukupuoli;
        Promillelaskin promille;
        kayttaja = new Kayttaja(null, 1, 70.0);
        promille = new Promillelaskin();
        
        //otetaan käyttäjän tiedot
        paino = kayttaja.getPaino();
        sukupuoli = kayttaja.getSukupuoli();
        //testataan onko mies vai nainen ja valitaan kertoimet sen mukaan
        if (sukupuoli == 1){
            newpaino = 0.75*paino;
        }
        else {newpaino = 0.66*paino;
        }
        while (promillet < 5){
        //lisätään juoman antama promille määrä(juomaa vastaavat grammat,uusipaino)
        System.out.println("anna juoma: ");
        juoma = user_input.nextDouble();
        promille.lisays(juoma, newpaino);
        
        
        promillet = promille.getpromillet();
        System.out.println("promillet atm " + promillet);
        promille.vahennys(paino, newpaino, aika);
        miinukset = promille.getpoltetut();
        System.out.println("paljonko palanut " + miinukset);
        maara = promillet - miinukset;
        promille.setpromille(maara);
        System.out.println("lopputulos " + maara);
        
        }
    }
}
