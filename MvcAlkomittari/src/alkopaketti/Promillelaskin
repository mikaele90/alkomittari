package alkopaketti;

public class Promillelaskin {

    private double promillet = 0;
    private double poltetut;

    public Promillelaskin() {
    }

    public double getpromillet() {
        return promillet;
    }

    public double getpoltetut() {
        return poltetut;
    }   
    public void setpromille (double total) {
        promillet = total;
    }

    public void lisays(double alkoholigramma, double fixedpaino) {
        this.promillet = promillet + alkoholigramma / fixedpaino;
    }

    public void vahennys(double paino, double newpaino, double aika) {
        poltetut = paino/10 * aika / newpaino;
    }
}
